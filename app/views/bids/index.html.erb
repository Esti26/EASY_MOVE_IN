<div class="container" width=50%>
  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>
<button> Filter moves</button>

<div class="container-fluid d-flex justify-content-center align-items-center flex-wrap bigboy">
    <% @bids.each do |bid| %>
      <div id = "card-div" class="card mx-5 my-3 d-flex justify-content-center shadow-lg mb-5 bg-white " style="width: 28rem;">
          <div class="card-body fullcard">
            <div class="card-header d-flex justify-content-center">
              <h3 class="titletext"> <%= bid.created_at.strftime("%A, %d %b %Y %l:%M %p") %> <hr class="solid"> </h3>
            </div>
            <br>
            <br>
            <div class="text-danger">
              <h5 class="card-title"> <i class="fa-solid fa-ruler-vertical" style="color: black;"></i> <%= bid.price %> â‚¬ </h5>
            </div>
            <div class ="d-flex justify-content-between mx-1">
                <%= link_to "Edit", edit_move_bid_path(bid.move_id, bid.id), class: "order-1 btn btn-success text-light" %>
                <%= link_to "", move_bid_path(bid.move_id, bid.id),  class: "order-3 btn btn-outline-danger text-light fa-solid fa-trash-can pt-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              </div>
          </div>
        </div>
    <%end%>
  </div>
