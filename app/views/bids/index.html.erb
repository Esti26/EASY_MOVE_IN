<form novalidate="novalidate" class="filter-form simple_form " action="/" accept-charset="UTF-8" method="get">
          <select class="form-control string required" type="text" name="search[query]" id="search_query" >
            <option value="rating">rating</option>
            <option value="price">price</option>
          </select>
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fa-solid fa-filter"></i>
          </button>
      </form>

<div class="container" width=50%>
  <div class="container col-10 mt-2 border flex-wrap rounded d-flex justify-content-center ">
    <div class=" w-75 d-flex justify-content-center align-items-center flex-column mb-3" style="margin-top: 15px; ">
      <% @bids.each do |bid| %>
        <div id="Bids-cards" class="card-body mb-5 border d-flex">
          <h6 class="card-title"> </h6>
          <h6 class="titletext">  </h6>
          <div class="bid-div-col">
            <i class="fa-solid fa-building" style="color: #f66b0e;"></i>
            <h6><%= Company.find(bid.company_id).name %></h6>
          </div>
          <div class="bid-div-col ">
            <i class="fa-solid fa-tag" style="color: #f66b0e;"></i>
            <h6><%= bid.price %>€ </h6>
          </div>
          <div class="bid-div-col">
            <i class="fa-solid fa-thumbs-up " style="color: #f66b0e;"></i>
            <%= "⭐" * rand(1..5) %>
          </div>
          <div class="bid-div-col">
            <i class="fa-solid fa-calendar" style="color: #f66b0e;"></i>
            <%= bid.created_at.strftime("%A, %d %b %Y %l:%M %p") %>
          </div>
          <div calss = "d-flex align-items-center">
          <%= button_to "see details", move_bid_path(bid.move_id, bid.id),method: :get, :class => "small_button"%>
          </div>
        </div>
      <%end %>
    </div>
  </div>
</div>
