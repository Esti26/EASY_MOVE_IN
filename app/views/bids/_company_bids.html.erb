<div class="container col-4 d-flex justify-content-center" data-controller="filter">
    <div class="col-6">
      <form novalidate="novalidate" class="filter-form simple_form" action="/bids" accept-charset="UTF-8" method="get">
        <select class="form-control string required" type="text" name="query" id="search_query" data-target="filter.select">
          <option value="rating">rating</option>
          <option value="price">price</option>
        </select>
        <div>
          <button name="button" type="submit" class="btn btn-flat" data-action="filter#applyFilter">
            <i class="fa-solid fa-filter"></i>
          </button>
        </div>
      </form>
    </div>
  </div>

  <h1 class="bids-text">My recieved bids</h1>
  <div class="container-full" id="client-index">
    <div  data-controller="tabs" data-tabs-default-tab-value="two">
      <button id="one" class="small_button card-tab" data-tabs-target="btn " data-action="click->tabs#select">open</button>
      <button id="two" class="small_button " data-tabs-target="btn " data-action="click->tabs#select">pending</button>
      <button id="three" class="small_button " data-tabs-target="btn " data-action="click->tabs#select">confirmed</button>
      <div  class="container-full"  data-controller="status">
        <%= render "bids", bids: @bids %>
      </div>
    </div>
  </div>
