<div id="company-index m-3">
  <div>
    <h1>Choose a move and place a bid!</h1>
    <div class="d-flex justify-content-center form-container">
      <form novalidate="novalidate" class="search-form simple_form search" action="/" accept-charset="UTF-8" method="get">
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>

      <form novalidate="novalidate" class="filter-form simple_form " action="/" accept-charset="UTF-8" method="get">
          <select class="form-control string required" type="text" name="search[query]" id="search_query" >
            <option value="5">5km arround</option>
            <option value="10">10km arround</option>
            <option value="50">50km arround</option>
            <option value="100">100km arround</option>
          </select>
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fa-solid fa-filter"></i>
          </button>
      </form>

    </div>
  </div>

  <div class= "d-flex justify-content-center">

    <div class=" left-container">
          <div class="container-fluid d-flex justify-content-center align-items-center flex-wrap bigboy ">
            <% @moves.each do |move| %>
              <div id = "card-div" class="small-card card d-flex justify-content-center mb-4">
                <%= link_to  move_path(move.id), data:{}, style:"text-decoration:none;" , title: "show this move" do%>
                      <h5 class="card-title"> <i class="fa-solid fa-calendar" style="color: #f66b0e"></i> <%= move.date.strftime("%a, %d %b %y %l:%m %p") %></h5>
                      <h5 class="card-title"> <i class="fa-solid fa-location-dot" style="color: #f66b0e"></i> <%= move.start_point %></h5>
                      <h5 class="card-title"> <i class="fa-solid fa-map-pin" ></i> <%= move.end_point %></h5>
                <%end%>
                <div class ="d-flex justify-content-between mx-1">
                  <%= link_to "Details", move_path(move.id), class: "button" %>
                  <%= link_to "Add a bid", new_move_bid_path(move.id), class: "button" %>
                </div>
              </div>
            <%end%>
          </div>
    </div>

    <div class= "container right-container">
      <%= image_tag "map.png", class:"image" %>
    </div>
  </div>
</div>
