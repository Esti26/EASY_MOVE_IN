<h1>Welcome</h1>

<div class="container d-flex justify-content-center ">
  <div class="card-container col-15"> My moves
    <% @moves.each do |move|%>
    <div class="card">
      <%= move.date %>
      <%= move.start_point %>
      <%= move.end_point %>
      <%= move.shipment_info %>
      <%= move.status %>
      <%= move.expiration %>
      <%= link_to "Edit", edit_move_path(move.id), class: "order-1 btn btn-success text-light" %>
      <%= link_to "", move_path(move.id),  class: "order-3 btn btn-outline-danger fa-solid fa-trash-can pt-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </div>

</div>
